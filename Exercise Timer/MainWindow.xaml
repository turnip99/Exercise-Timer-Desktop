<Window x:Class="Exercise_Timer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exercise_Timer"
        mc:Ignorable="d"
        Title="Menu" Height="370" Width="346">
    <Grid>
        <Canvas Margin="16,16">
            <Button Name ="ButtonManage" Margin="0, 0" Width="300" Height="90" Background="Turquoise" FontWeight="Bold" FontSize="31" Canvas.Left="-2">Manage Exercises</Button>
            <Button Name ="ButtonGet" Margin="0, 105" Width="300" Height="90" Background="LightGreen" FontWeight="Bold" FontSize="31">Generate Exercises</Button>
            <Button Name ="ButtonTimer" Margin="0, 210" Width="300" Height="90" Background="Gold" FontWeight="Bold" FontSize="31">Run Timer</Button>
        </Canvas>
    </Grid>
</Window>